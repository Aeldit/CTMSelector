{
  "schemaVersion": 1,
  "id": "ctms",
  "version": "${version}",
  "name": "CTM Selector",
  "description": "This mod allows you to choose which blocks will have connected textures in each CTM pack. The resource packs must be zip files",
  "authors": [
    "Aeldit"
  ],
  "contact": {
    "homepage": "https://modrinth.com/user/Aeldit/ctm-selector",
    "sources": "https://github.com/Aeldit/CTMSelector",
    "issues": "https://github.com/Aeldit/CTMSelector/issues"
  },
  "license": "GPL-3.0 license",
  "icon": "assets/ctms/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "fr.aeldit.ctms.CTMSClientCore"
    ],
    "modmenu": [
      "fr.aeldit.ctms.gui.ModMenuApiImpl"
    ]
  },
  "depends": {
    "minecraft": ">=${min} <=${max}",
    "java": ">=${java_version}",
    "fabricloader": ">=${loader_version}",
    "fabric-api": ">=${fabric_api_version}",
    "modmenu": "=${modmenu_version}",
    "continuity": "=${continuity_version}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/PcYPpqzhKS"
      }
    }
  }
}
